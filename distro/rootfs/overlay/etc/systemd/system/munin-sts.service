[Unit]
Description=MuninOS Speech Runtime (Local)
After=sound.target network-online.target munin-brain.service munin-core.service
Wants=network-online.target munin-brain.service munin-core.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
EnvironmentFile=-/etc/default/munin-sts
ExecStart=/usr/local/bin/munin-sts
Restart=always
RestartSec=2
StandardOutput=journal
StandardError=journal
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
