#!/usr/bin/env bash
set -euo pipefail

BIN_CANDIDATES=(
  "/opt/muninos/bin/munin-core"
  "/usr/local/bin/blueprint-core"
  "/usr/local/bin/muninos-core"
)

for bin in "${BIN_CANDIDATES[@]}"; do
  if [[ -x "$bin" ]]; then
    exec "$bin" start --sts
  fi
done

echo "[munin-core] no core binary found. looked in: ${BIN_CANDIDATES[*]}" >&2
exit 1
